# Include the README and license
include README.md
include LICENSE

# Include the configuration files
include pyproject.toml
include setup.py

# Include example files
recursive-include example *.py

# Exclude build artifacts and version control
global-exclude *.pyc
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
prune cpp_legacy/cmake-build-*
prune cpp_legacy/CMakeFiles
prune build
prune dist
prune *.egg-info
